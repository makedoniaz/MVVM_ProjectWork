<Application x:Class="FitnessApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FitnessApp"
             xmlns:vm="clr-namespace:FitnessApp.ViewModels"
             xmlns:v="clr-namespace:FitnessApp.Views">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <v:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UserInfoViewModel}">
            <v:UserInfoView/>
        </DataTemplate>

    </Application.Resources>
</Application>
